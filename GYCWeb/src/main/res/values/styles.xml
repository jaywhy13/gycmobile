<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/data-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar"
        >
        <!--
            Theme customizations available in newer API levels can go in
            res/data-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CIAActionBar</item>
        <item name="actionBarStyle">@style/CIAActionBar</item>


    </style>

    <style name="CIAActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="background">@color/action_bar_bg_color</item>

        <item name="android:titleTextStyle">@style/CIAActionBarTitleText</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/CIAActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CIAActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="banner_style">
        <!--<item name="android:background">#003938</item> -->
    </style>

    <style name="cia_logo_style">
        <item name="android:width">300dip</item>
        <item name="android:layout_gravity">center_horizontal|right</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="tagline_style">
        <item name="android:color">#EBEFF1</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="main_menu_item_style">
        <item name="android:padding">10dp</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="main_menu_icon_style">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>-->
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="media_button">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
